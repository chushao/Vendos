  <rule id="lightsRule">
    <example>turn lights on</example>
    <example>turn lights off</example>
    <example>lights on</example>
    <example>lights off</example>

    <item repeat="0-1">turn</item>
    <one-of>
      <item>lights</item>
      <item>lamp</item>
    </one-of>
    <ruleref uri="#lightsActions"/>
  </rule>

  <rule id="lightsActions">
    <one-of>
      <item>
        <tag>out.action="LIGHTS ON";</tag>
        <one-of>
          <item>on</item>
          <item>activate</item>
        </one-of>
      </item>
      <item>
        <tag>out.action="LIGHTS OFF";</tag>
        <one-of>
          <item>off</item>
          <item>deactivate</item>
        </one-of>
      </item>
      <item>
        <tag>out.action="LIGHTS DIM";</tag>
        <item>dim</item>
        <item>level</item>
        <one-of>
          <item>
            <tag>out.level=0;</tag>
            zero
          </item>
          <item>
            <tag>out.level=1;</tag>
            one
          </item>
          <item>
            <tag>out.level=2;</tag>
            two
          </item>
          <item>
            <tag>out.level=3;</tag>
            three
          </item>
          <item>
            <tag>out.level=4;</tag>
            four
          </item>
          <item>
            <tag>out.level=5;</tag>
            five
          </item>
        </one-of>
      </item>
    </one-of>
  </rule>

  <rule id="televisionRules">
    <one-of>
      <item>television</item>
      <item>tv</item>
    </one-of>
    <ruleref uri="#televisionActions"/>
  </rule>

  <rule id="televisionActions">
    <one-of>
      <item>
        <tag>out.action="TELEVISION ON";</tag>
        <one-of>
          <item>on</item>
        </one-of>
      </item>
      
      <item>
        <tag>out.action="TELEVISION OFF";</tag>
        <one-of>
          <item>off</item>
        </one-of>
      </item>

      <item>
        <tag>out.action="TELEVISION CHANNEL UP";</tag>
        <one-of>
          <item>channel up</item>
        </one-of>
      </item>

      <item>
        <tag>out.action="TELEVISION CHANNEL DOWN";</tag>
        <one-of>
          <item>channel down</item>
        </one-of>
      </item>
      
      <item>
        <tag>out.action="TELEVISION VOLUME UP";</tag>
        <item>volume up</item>
      </item>

      <item>
        <tag>out.action="TELEVISION VOLUME DOWN";</tag>
        <item>volume down</item>
      </item>

      <item>
        <tag>out.action="TELEVISION MUTE";</tag>
        <one-of>
          <item>mute</item>
          <item>unmute</item>
        </one-of>
      </item>

      <item>
        <one-of>
          <item>change channel to</item>
          <item>tune to</item>
        </one-of>
        <ruleref uri="#channels"/>
        <tag>out.action="TELEVISION CHANNEL " + rules.channels.Channel;</tag>
      </item>
    </one-of>
  </rule>

  <rule id="channels">
    <one-of>
      <item>
        <tag>out.Channel="FOOD NETWORK";</tag>
        food network
      </item>
    </one-of>
  </rule>

  <rule id="percentage">
    <item>
      <one-of>
        <item>
          zero
        </item>
        <item>
          <ruleref uri="#numberFragment"/>
        </item>
        <item>
          ten
        </item>
        <item>
          eleven
        </item>
        <item>
          twelve
        </item>
        <item>
          <ruleref uri="#numberTeens"/>
        </item>
        <item>
          <item>
            <ruleref uri="#numberPrefix"/>
          </item>
          <item repeat="0-1">
            <ruleref uri="#numberFragment"/>
          </item>
        </item>
        <item>
          one hundred
        </item>
      </one-of>
    </item>
  </rule>

  <rule id="numberTeens">
    <one-of>
      <item>
        thirteen
      </item>
      <item>
        fourteen
      </item>
      <item>
        fifteen
      </item>
      <item>
        sixteen
      </item>
      <item>
        seventeen
      </item>
      <item>
        eighteen
      </item>
      <item>
        nineteen
      </item>
    </one-of>
  </rule>
  <rule id="numberPrefix">
    <one-of>
      <item>twenty</item>
      <item>thirty</item>
      <item>fourty</item>
      <item>fifty</item>
      <item>sixty</item>
      <item>seventy</item>
      <item>eighty</item>
      <item>ninety</item>
    </one-of>
  </rule>
  <rule id="numberFragment">
    <one-of>
      <item>one</item>
      <item>two</item>
      <item>three</item>
      <item>four</item>
      <item>five</item>
      <item>six</item>
      <item>seven</item>
      <item>eight</item>
      <item>nine</item>
    </one-of>
  </rule>

</grammar>